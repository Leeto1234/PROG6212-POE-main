@{
    ViewData["Title"] = "Login";
}

<div class="page">
    <div class="wrapper">
        <div class="form-box">
            <h1>Staff Role</h1>
            <p>Please select the appropriate option.</p>
            <button class="btn admin" type="submit">Academic Manager</button>
            <button class="btn admin" type="submit">Programme Coordinator</button>
            <button class="btn employee" type="submit">Lecturer</button>
        </div>
        <div class="form-box">
            <h1>Login</h1>
            <div class="input-box">
                <input type="text" required />
                <label>Username</label>
            </div>

            <div class="input-box">
                <input type="password" required />
                <label>Password</label>
            </div>

            <button class="btn" type="submit">Login</button>

        </div>
    </div>
</div>
